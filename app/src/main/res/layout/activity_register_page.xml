<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/astraea_background"
    tools:context=".RegisterPage">


    <EditText
        android:id="@+id/text_mail2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="73dp"
        android:autofillHints="E-mail"
        android:ems="10"
        android:hint="@string/mail"
        android:inputType="none"
        android:text="@string/mail"
        android:textColor="@color/astraea_fon_color1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/register_password"
        app:layout_constraintEnd_toEndOf="@+id/register_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_email"
        app:layout_constraintTop_toBottomOf="@+id/register_username" />

    <EditText
        android:id="@+id/text_username"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="40dp"
        android:autofillHints="Username"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="none"
        android:text="@string/username"
        android:textColor="@color/astraea_fon_color1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/register_username"
        app:layout_constraintEnd_toEndOf="@+id/register_username"
        app:layout_constraintStart_toStartOf="@+id/register_username" />

    <EditText
        android:id="@+id/text_password2"
        android:layout_width="219dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:autofillHints="Password"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="none"
        android:text="@string/password"
        android:textColor="@color/astraea_fon_color1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/register_password"
        app:layout_constraintStart_toStartOf="@+id/register_button"
        app:layout_constraintTop_toTopOf="@+id/register_email" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/rounded_corner"
        android:elevation="15dp"
        android:ems="10"
        android:hint="abcd@mail.com"
        android:inputType="textEmailAddress"
        android:textColor="#050505"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toTopOf="@+id/register_password"
        app:layout_constraintEnd_toEndOf="@+id/register_password"
        app:layout_constraintStart_toStartOf="@+id/text_password2"
        app:layout_constraintTop_toTopOf="@+id/text_mail2" />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_corner"
        android:elevation="15dp"
        android:ems="10"
        android:hint="lilalola"
        android:inputType="textEmailAddress"
        android:textColor="#050505"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toTopOf="@+id/text_mail2"
        app:layout_constraintEnd_toEndOf="@+id/register_email"
        app:layout_constraintStart_toStartOf="@+id/text_mail2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/rounded_corner"
        android:elevation="15dp"
        android:ems="10"
        android:hint="Password Here"
        android:inputType="textPassword"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toTopOf="@+id/register_button"
        app:layout_constraintEnd_toEndOf="@+id/text_password2"
        app:layout_constraintStart_toStartOf="@+id/text_password2"
        app:layout_constraintTop_toBottomOf="@+id/text_mail2" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="@color/astraea_button2"
        android:elevation="20dp"
        android:text="@string/register_button_text"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="404dp"
        android:layout_height="221dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="54dp"
        android:contentDescription="@string/image_desc_name"
        app:layout_constraintBottom_toTopOf="@+id/register_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/astraea_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>